<%- include("partials/header") %>
<div class="page-header-image" style="background-image:url(/images/sh-background.jpg)">
</div>
<div class="container newpost-body">
    <h1>Yazını bizimle paylaş</h1>
    <form action="/posts" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <input class="form-control" type="text" name="post[title]" placeholder="Başlık buraya..." required>
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="post[subtitle]" placeholder="Altbaşlık buraya...">
        </div>
        <div class="form-group">
            <label for="postimg">Resim buraya..</label>
            <input type="file" class="form-control-file img-btn" id="postimg" name="image" accept="image/*" required>
        </div>
        <div class="form-group">
            <textarea class="form-control" name="post[content]" id="" cols="30" rows="12" placeholder="İçerik buraya..."
                required></textarea>
        </div>
        <div class="col-md-5 ml-auto mr-auto"><button type="submit"
                class="btn btn-primary btn-round btn-lg btn-block">Gönder</button></div>

    </form>
</div>

<%- include("partials/footer") %>