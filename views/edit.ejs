<%- include("partials/header") %>
<div class="page-header-image" style="background-image:url(/images/sh-background.jpg)">
</div>
<div class="container edit-body">
    <h1>Edit <%= editedPost.title %> </h1>
    <form action="/posts/<%=editedPost.id%>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" placeholder="title" name="title" value="<%= editedPost.title  %> ">
        </div>
        <div class="form-group">
            <textarea class="form-control" name="content" id="" cols="30" rows="10"><%- editedPost.content %> </textarea>
        </div>
		
		<div class="col-md-5 ml-auto mr-auto">
        <input type="submit" value="submit" class="btn btn-primary btn-round btn-lg btn-block">
    </div>
    </form>
</div>

<%- include("partials/footer") %>